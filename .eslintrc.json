{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": [0, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
        "import/extensions": [0, "never"],
        "import/prefer-default-export": [0],
        "no-multiple-empty-lines": [2, {"max": 1, "maxEOF": 2}],
        "object-curly-newline": [
            "error",
            {
              "ObjectExpression": "always",
              "ObjectPattern": { "multiline": true },
              "ImportDeclaration": "never",
              "ExportDeclaration": "never"
            }
          ],
          "no-unused-vars": [0, "never"],
          "react/jsx-props-no-spreading": [0, "never"],
          "react/prop-types": [0, "never"],
          "react/require-default-props": [0, "never"]
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
}
